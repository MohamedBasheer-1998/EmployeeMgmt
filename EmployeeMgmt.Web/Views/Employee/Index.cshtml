@model IEnumerable<EmployeeMgmt.Application.DTOs.EmployeeDto>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<a asp-action="Create" class="btn btn-primary">Create New Employee</a>

<table class="table">
    <thead>
        <tr>
            <th>Employee Code</th>
            <th>Name</th>
            <th>Email</th>
            <th>Hire Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeCode</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
               
                <td>@employee.HireDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
