@model IEnumerable<EmployeeMgmt.Application.DTOs.EmployeeDto>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<div style="text-align: right; margin-bottom: 10px;">
    <a asp-action="Create" class="btn btn-primary">Create New Employee</a>
    <a asp-controller="Department" asp-action="Index" class="btn btn-info">View All Departments</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Employee Code</th>
            <th>Name</th>
            <th>Email</th>
            <th>Hire Date</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeCode</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.HireDate.ToString("yyyy-MM-dd")</td>
                <td>@employee.DepartmentName</td>
                <td>
                    <label class="btn btn-secondary" for="toggle-@employee.EmployeeId">
                        <i class="fas fa-ellipsis-v"></i>
                    </label>
                    <input type="checkbox" id="toggle-@employee.EmployeeId" class="action-toggle" style="display:none;">

                    <div class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    .action-buttons {
        display: none;
        position: absolute;
        background-color: white;
        border: 1px solid #ddd;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 10px;
        margin-top: 5px;
        z-index: 100;
    }

    input[type="checkbox"]:checked + .action-buttons {
        display: block;
    }

    .action-buttons a {
        display: block;
        margin-bottom: 5px;
    }
</style>
